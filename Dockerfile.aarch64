FROM --platform=linux/arm64/v8 docker.io/arm64v8/debian:trixie-slim AS trixie

RUN set -ex; \
    DEBIAN_FRONTEND=noninteractive; \
    export DEBIAN_FRONTEND; \
    apt -y update; \
    apt -y install --no-install-recommends ca-certificates lz4; \
    apt -y dist-upgrade; \
    apt -y autoremove; \
    apt -y clean; \
    rm -rf /var/cache/apt/archives/* /var/lib/apt/lists/*

RUN set -ex; \
    DEBIAN_FRONTEND=noninteractive; \
    export DEBIAN_FRONTEND; \
    apt -y update; \
    apt -y install soju; \
    apt -y clean; \
    rm -rf /var/cache/apt/archives/* /var/lib/apt/lists/*; \
    usermod -s /bin/sh -c Soju -U soju; \
    mkdir -p /var/lib/soju/logs /etc/ssl/certs/soju /home/soju/uploads /etc/soju /run/soju; \
    chown -R soju:soju /home/soju/uploads /run/soju

VOLUME /var/lib/soju
VOLUME /etc/soju
VOLUME /home/soju/uploads

CMD ["soju"]